{
  "name": "software-engineer-resume",
  "private": true,
  "version": "1.0.0",
  "description": "Template for a purist one pager resume",
  "main": "r-app.js",
  "module": "r-app.js",
  "type": "module",
  "files": [
    "src/"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf target",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --write",
    "docs": "npm run docs:clean && npm run build && npm run docs:build && npm run dist:clean",
    "docs:clean": "rimraf docs",
    "docs:build": "rollup -c rollup.config.js",
    "docs:serve": "wds --root-dir=docs --node-resolve --watch",
    "dist:clean": "rimraf dist",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "Ã‰mile Savard",
  "license": "MIT Liscence",
  "dependencies": {
    "lit": "^2.2.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/building-rollup": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@web/dev-server": "^0.1.31",
    "deepmerge": "^4.2.2",
    "eslint": "^8.15.0",
    "lit-analyzer": "^1.2.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "typescript": "~4.7.4"
  }
}
