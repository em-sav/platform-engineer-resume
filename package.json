{
  "name": "software-engineer-resume",
  "private": true,
  "version": "1.0.0",
  "description": "Template for a purist one pager resume",
  "main": "r-app.js",
  "module": "r-app.js",
  "type": "module",
  "files": [
    "src/"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel build:watch server:watch",
    "docs": "npm run target:clean && npm run docs:clean && npm run target:build && npm run docs:build",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --write",
    "target:build": "tsc",
    "target:clean": "rimraf target",
    "docs:clean": "rimraf docs",
    "docs:build": "tsc && rollup -c rollup.config.js --context 'this'",
    "build:watch": "tsc --watch",
    "server:watch": "wds --watch",
    "lint:lit-analyzer": "lit-analyzer"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "Ã‰mile Savard",
  "license": "MIT Liscence",
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-copy": "^0.5.1",
    "@web/rollup-plugin-html": "^2.3.0",
    "lit-analyzer": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.32.1",
    "typescript": "~5.7.3"
  }
}
